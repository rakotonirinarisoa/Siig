
@{
    ViewBag.Title = "FTP Historique";
    ViewData["Controller"] = "Historique d'envoi fichier via FTP";
}


<div class="d-flex flex-wrap justify-content-between">
    <div class="btn bg-gradient-olive mb-3 btn-flat">
        <a href="../FTPSend/FTPSendCreate" style="color:#FFFF">
            <i class="fa fa-edit"></i> Paramétrage FTP
        </a>
    </div>
    <div class="input-group mb-3 col-sm-5">
        <div class="input-group-prepend">
            <span class="input-group-text text-bold" id="basic-addon3"><i class="fa fa-search"></i></span>
        </div>
        <input type="text" class="form-control col" id="ticket" placeholder="Rechercher...">
    </div>
</div>

<div class="table-responsive">
    <table class="table table-hover table-striped">
        <thead class="thead-green">
            <tr>
                <th>Utilisateur</th>
                <th>Date d'envoi</th>
            </tr>
        </thead>
        <tbody ticket-list>
            @for (int i = 0; i < 5; i++)
            {
                <tr class="text-nowrap last-hover">
                    <td>Mikajy</td>
                    <td>26/03/2023</td>
                </tr>
            }
        </tbody>
    </table>
</div>